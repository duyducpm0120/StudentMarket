<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context=".Controller.Account.ProfileInfo">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="@string/user_name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_profile_account_name_text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:focusable="false"
                android:inputType="textNoSuggestions|textPersonName"
                android:text="AAAAA"
                android:textColor="@color/black"
                android:textColorHighlight="@color/primary"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/university"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/university_text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:focusable="false"
                android:inputType="textNoSuggestions|textPersonName"
                android:textColor="@color/black"
                android:textColorHighlight="@color/primary"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/phone_number"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phone_text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:focusable="false"
                android:inputType="textNoSuggestions|textPersonName|phone"
                android:textColor="@color/black"
                android:textColorHighlight="@color/primary"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email_text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:focusable="false"
                android:inputType="textNoSuggestions|textPersonName|textEmailAddress"
                android:textColor="@color/black"
                android:textColorHighlight="@color/primary"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/password"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/password_text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:focusable="false"
                android:inputType="textNoSuggestions|textPersonName|textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/primary"
                android:textColorHint="@color/gray"
                android:textColorLink="@color/primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/secondary"
                    android:elevation="2dp"
                    android:shadowColor="@color/gray"
                    android:shadowRadius="8"
                    android:text="@string/edit"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/primary"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:rippleColor="@color/primary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>