<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Account.EditProfile">

    <ScrollView
        android:id="@+id/edit_profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/common_header"
                android:orientation="vertical"></LinearLayout>

            <io.getstream.avatarview.AvatarView
                android:id="@+id/edit_profile_profile_avatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:layout_marginTop="50dp"
                android:foregroundGravity="center"
                app:avatarViewBorderColor="@color/white"
                app:avatarViewBorderWidth="3dp"
                app:avatarViewShape="circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="110dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/edit_profile_change_profile_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/change_avatar"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/account_name"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_profile_user_name_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="true"
                    android:editable="true"
                    android:ems="10"
                    android:enabled="true"
                    android:focusable="auto"
                    android:inputType="textNoSuggestions|textPersonName"
                    android:text="AAAAA"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/user_name"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_profile_account_name_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="auto"
                    android:inputType="textNoSuggestions|textPersonName"
                    android:text="AAAAA"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/phone_number"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_profile_phone_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="true"
                    android:editable="true"
                    android:ems="10"
                    android:enabled="true"
                    android:focusable="auto"
                    android:inputType="textNoSuggestions|textPersonName|phone"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/university"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_profile_university_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="auto"
                    android:inputType="textNoSuggestions|textPersonName"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/email"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_profile_email_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="auto"
                    android:inputType="textNoSuggestions|textPersonName|textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/password"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_profile_password_text_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittextstyle"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="true"
                    android:focusable="auto"
                    android:inputType="textNoSuggestions|textPersonName|textPassword"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/edit_profile_change_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="@string/change_password"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/profile_info_edit_profile_button"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/secondary"
                        android:elevation="2dp"
                        android:shadowColor="@color/gray"
                        android:shadowRadius="8"
                        android:text="@string/confirm"
                        android:textColorHighlight="@color/primary"
                        android:textColorHint="@color/primary"
                        android:textColorLink="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:rippleColor="@color/primary" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>