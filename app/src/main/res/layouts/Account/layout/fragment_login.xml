<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".Controller.Account.Login">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent" android:orientation="vertical"
        android:padding="16dp" android:background="@drawable/gradient_background"
        android:layout_height="match_parent">
        <ImageButton android:layout_marginTop="15dp" android:id="@+id/loginClose"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/ic_close" android:backgroundTint="#fff"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless" />
        <TextView android:id="@+id/textView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="0dp"
            android:text="Đăng nhập" android:textSize="32dp" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="24dp" android:text="Xin chào,\nĐăng nhập tại đây"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText android:id="@+id/register_username_edit_text" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="104dp"
            android:autofillHints="@string/prompt_email"
            android:background="@drawable/edittextstyle" android:hint="Email, Tên đăng nhập"
            android:inputType="textEmailAddress" android:minHeight="48dp"
            android:selectAllOnFocus="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText android:id="@+id/register_password_edit_text" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp"
            android:autofillHints="@string/prompt_password"
            android:background="@drawable/edittextstyle" android:hint="Mật khẩu"
            android:imeActionLabel="@string/action_sign_in_short" android:imeOptions="actionDone"
            android:inputType="textPassword" android:minHeight="48dp"
            android:selectAllOnFocus="true" app:layout_constraintTop_toBottomOf="@+id/register_username_edit_text" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Quên mật khẩu?" android:clickable="true" android:id="@+id/forgot_password"
            android:layout_gravity="end" android:layout_marginTop="10dp"
            android:textColor="#5AC7E6" />

        <Button android:id="@+id/register_button" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Đăng nhập" style="@style/myButton"
            app:layout_constraintTop_toBottomOf="@+id/register_password_edit_text" />
        <LinearLayout android:layout_marginTop="10dp" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center"

        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản? " android:textSize="16dp"

            ></TextView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Đăng ký" android:textSize="16dp" android:clickable="true"
                android:textColor="@color/primary" android:id="@+id/register" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>